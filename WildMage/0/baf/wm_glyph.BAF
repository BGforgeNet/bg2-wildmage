IF
  Die()
THEN
  RESPONSE #100
    Destroyself()
END  

IF
  See([ANYONE])
THEN
  RESPONSE #100
    ForceSpell(LastSeenBy(Myself),WIZARD_CHARM_PERSON)
  RESPONSE #100
    ForceSpell(LastSeenBy(Myself),WIZARD_COLOR_SPRAY)
  RESPONSE #100
    ForceSpell(LastSeenBy(Myself),WIZARD_MAGIC_MISSILE)
  RESPONSE #100
    ForceSpell(LastSeenBy(Myself),WIZARD_SPOOK)
END

IF
	Global("gone","LOCALS",1)
THEN
	RESPONSE #100
		NoAction()
END

IF
	True()
THEN
	RESPONSE #100
		SetGlobal("gone","LOCALS",1)
		Continue()
END


IF
	Inparty(Myself)
THEN
	RESPONSE #100
		LeaveParty()
		Continue()
END

IF
	!Allegiance(Myself,Enemy)
THEN
	RESPONSE #100
		Help()
		Shout(99)		 // Non-Enemies, even party members, alert guards...
		Continue()
END	

	

